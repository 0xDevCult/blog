---
import LanguageSelect from '@astrojs/starlight/components/LanguageSelect.astro';
import SocialIcons from '@astrojs/starlight/components/SocialIcons.astro';
import Search from '@astrojs/starlight/components/Search.astro';
import ThemeSelect from './ThemeSelect.astro';
---

<div class="header sl-flex">
	<div class="sl-flex header-left">
		<slot name="start" />
	</div>

	<div class="header-center sl-flex">
		<div class="title-center">
			<a href="/" class="site-title-link">
				<span translate="no">DevCult Blog</span>
			</a>
		</div>
	</div>

	<div class="header-search-mobile">
		<Search {...Astro.props} />
	</div>

	<div class="sl-flex header-right">
		<div class="sl-hidden md:sl-flex right-group">
			<SocialIcons {...Astro.props} />
			<ThemeSelect {...Astro.props} />
			<LanguageSelect {...Astro.props} />
		</div>
	</div>
</div>

<style>
	.header {
		gap: var(--sl-nav-gap);
		justify-content: space-between;
		align-items: center;
		height: 100%;
		width: 100%;
	}

	.header-left {
		gap: var(--sl-nav-gap);
		align-items: center;
		flex: 0 0 auto;
	}

	.header-center {
		flex: 1 1 auto;
		justify-content: center;
		align-items: center;
	}

	.header-right {
		gap: 1rem;
		align-items: center;
		flex: 0 0 auto;
	}

	.header-search-mobile {
		display: none;
	}

	.title-center {
		font-family: var(--font-coconat);
		font-size: 1.25rem;
		font-weight: 600;
		letter-spacing: 0.025em;
	}

	.site-title-link {
		color: var(--color-text-primary);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.site-title-link:hover {
		color: var(--color-brand-500);
	}

	.right-group {
		gap: 1rem;
		align-items: center;
	}

	/* On 800-1090px screens, stick DevCult Blog to the right and show search */
	@media (min-width: 50rem) and (max-width: 68.125rem) {
		.header-center {
			flex: 0 0 auto;
			margin-left: auto;
		}

		.title-center {
			font-size: 1.125rem;
		}

		.header-search-mobile {
			display: flex;
			align-items: center;
			flex: 0 0 auto;
		}
	}

	/* On tablet and mobile, ensure title stays centered */
	@media (max-width: 50rem) {
		.title-center {
			font-size: 1rem;
		}

		.site-title-link {
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
		}

		.header-search-mobile {
			display: flex;
			align-items: center;
			flex: 0 0 auto;
		}
	}

	/* Style menu button with accent color */
	.header-left :global(button) {
		color: var(--sl-color-accent) !important;
	}

	.header-left :global(button:hover) {
		color: var(--sl-color-accent-high) !important;
	}

	.header-left :global(button svg) {
		fill: var(--sl-color-accent) !important;
	}

	.header-left :global(button:hover svg) {
		fill: var(--sl-color-accent-high) !important;
	}

	.header-left :global(button svg path) {
		fill: var(--sl-color-accent) !important;
	}

	.header-left :global(button:hover svg path) {
		fill: var(--sl-color-accent-high) !important;
	}

	/* Style search icon with accent color */
	.header-search-mobile :global(site-search button) {
		color: var(--sl-color-accent) !important;
	}

	.header-search-mobile :global(site-search button:hover) {
		color: var(--sl-color-accent-high) !important;
	}

	.header-search-mobile :global(site-search button svg) {
		fill: var(--sl-color-accent) !important;
	}

	.header-search-mobile :global(site-search button:hover svg) {
		fill: var(--sl-color-accent-high) !important;
	}

	.header-search-mobile :global(site-search button svg path) {
		fill: var(--sl-color-accent) !important;
	}

	.header-search-mobile :global(site-search button:hover svg path) {
		fill: var(--sl-color-accent-high) !important;
	}

	/* On very small screens, reduce title size further */
	@media (max-width: 30rem) {
		.title-center {
			font-size: 0.875rem;
		}
	}
</style>
