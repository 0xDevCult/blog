---
import LanguageSelect from '@astrojs/starlight/components/LanguageSelect.astro';
import SocialIcons from '@astrojs/starlight/components/SocialIcons.astro';
import Search from '@astrojs/starlight/components/Search.astro';
import ThemeSelect from './ThemeSelect.astro';
---

<a href="#main-content" class="skip-link"> Skip to main content </a>

<div class="header sl-flex">
	<div class="sl-flex header-left">
		<slot name="start" />
	</div>

	<div class="sl-flex header-right">
		<div class="right-group">
			<div class="title-center">
				<a href="/" class="site-title-link">
					<span translate="no">DevCult Blog</span>
				</a>
			</div>
			<div class="header-search">
				<Search {...Astro.props} />
			</div>
			<SocialIcons {...Astro.props} />
			<ThemeSelect {...Astro.props} />
			<LanguageSelect {...Astro.props} />
		</div>
	</div>
</div>

<style>
	.header {
		gap: var(--sl-nav-gap);
		justify-content: space-between;
		align-items: center;
		height: 100%;
		width: 100%;
	}

	.header-left {
		gap: var(--sl-nav-gap);
		align-items: center;
		flex: 0 0 auto;
	}

	.header-right {
		display: flex;
		gap: 1rem;
		align-items: center;
		flex: 0 0 auto;
	}

	.header-search {
		display: flex;
		align-items: center;
		flex: 0 0 auto;
	}

	.title-center {
		font-family: var(--font-coconat);
		font-size: 1.25rem;
		font-weight: 600;
		letter-spacing: 0.025em;
		white-space: nowrap;
	}

	.site-title-link {
		color: var(--color-text-primary);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.site-title-link:hover {
		color: var(--color-brand-500);
	}

	.right-group {
		display: flex;
		flex-direction: row;
		gap: 1rem;
		align-items: center;
		flex: 0 0 auto;
	}

	/* Responsive adjustments */
	@media (max-width: 50rem) {
		.title-center {
			font-size: 1rem;
		}

		/* Hide theme and language selectors in mobile header */
		.right-group :global(starlight-theme-select),
		.right-group :global([aria-label*='language' i]) {
			display: none !important;
		}
	}

	@media (max-width: 30rem) {
		.title-center {
			font-size: 0.875rem;
		}
	}

	/* Style menu button with accent color */
	.header-left :global(button) {
		color: var(--sl-color-accent) !important;
	}

	.header-left :global(button:hover) {
		color: var(--sl-color-accent-high) !important;
	}

	.header-left :global(button svg) {
		fill: var(--sl-color-accent) !important;
	}

	.header-left :global(button:hover svg) {
		fill: var(--sl-color-accent-high) !important;
	}

	.header-left :global(button svg path) {
		fill: var(--sl-color-accent) !important;
	}

	.header-left :global(button:hover svg path) {
		fill: var(--sl-color-accent-high) !important;
	}

	/* Style search icon with accent color */
	.header-search :global(site-search button) {
		color: var(--sl-color-accent) !important;
	}

	.header-search :global(site-search button:hover) {
		color: var(--sl-color-accent-high) !important;
	}

	.header-search :global(site-search button svg) {
		fill: var(--sl-color-accent) !important;
	}

	.header-search :global(site-search button:hover svg) {
		fill: var(--sl-color-accent-high) !important;
	}

	.header-search :global(site-search button svg path) {
		fill: var(--sl-color-accent) !important;
	}

	.header-search :global(site-search button:hover svg path) {
		fill: var(--sl-color-accent-high) !important;
	}

	/* Skip link for accessibility */
	.skip-link {
		position: absolute;
		top: -40px;
		left: 0;
		background: var(--color-brand-500);
		color: white;
		padding: 8px 16px;
		text-decoration: none;
		z-index: 100;
		border-radius: 0 0 4px 0;
		font-weight: 600;
		transition: top 0.2s ease;
	}

	.skip-link:focus {
		top: 0;
	}
</style>
