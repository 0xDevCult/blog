---
/**
 * Custom PageFrame Override
 *
 * Adds main-content ID for skip link accessibility
 */
import MobileMenuToggle from '@astrojs/starlight/components/MobileMenuToggle.astro';

const { hasSidebar } = Astro.locals.starlightRoute;
---

<div class="page sl-flex">
	<header class="header"><slot name="header" /></header>
	{
		hasSidebar && (
			<nav class="sidebar print:hidden" aria-label={Astro.locals.t('sidebarNav.accessibleLabel')}>
				<MobileMenuToggle />
				<div id="starlight__sidebar" class="sidebar-pane">
					<div class="sidebar-content sl-flex">
						<slot name="sidebar" />
					</div>
				</div>
			</nav>
		)
	}
	<div id="main-content" class="main-frame"><slot /></div>
</div>

<style>
	@layer starlight.core {
		.page {
			flex-direction: column;
			min-height: 100vh;
		}

		.header {
			z-index: var(--sl-z-index-navbar);
			position: fixed;
			inset-inline-start: 0;
			inset-block-start: 0;
			width: 100%;
			height: var(--sl-nav-height);
			border-bottom: 1px solid var(--sl-color-hairline-shade);
			padding: var(--sl-nav-pad-y) var(--sl-nav-pad-x);
			padding-inline-end: var(--sl-nav-pad-x);
			background-color: var(--sl-color-bg-nav);
			backdrop-filter: blur(16px);
		}

		:global([data-has-sidebar]) .header {
			padding-inline-end: calc(var(--sl-nav-gap) + var(--sl-nav-pad-x) + var(--sl-sidebar-width));
		}

		.sidebar {
			display: none;
		}

		.main-frame {
			padding-top: calc(var(--sl-nav-height) + var(--sl-mobile-toc-height));
			padding-inline: var(--sl-content-pad-x);
		}

		@media (min-width: 50rem) {
			:global([data-has-sidebar]) .main-frame {
				margin-inline-start: var(--sl-sidebar-width);
			}

			.sidebar {
				display: flex;
				position: fixed;
				z-index: var(--sl-z-index-navbar);
				inset-block: 0;
				inset-inline-start: 0;
				width: var(--sl-sidebar-width);
				padding-block: calc(var(--sl-nav-height) + 1rem) 1rem;
				background-color: var(--sl-color-bg-sidebar);
				overflow-y: auto;
			}

			.sidebar-pane {
				width: 100%;
				height: 100%;
				visibility: visible;
				position: static;
			}

			.sidebar-content {
				height: 100%;
			}
		}
	}
</style>
